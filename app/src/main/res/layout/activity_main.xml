<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#f49100"
    android:theme="@android:style/Theme.Holo"
    android:textAlignment="center"
    tools:context=".MainActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps!"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textAlignment="center"
        android:textSize="30dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Spotify Streamer"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:textAllCaps="true"
        android:textColor="#0408cc"
        android:textAlignment="center"
        android:textSize="25dp"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Scores App"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textColor="#1611b0"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="25dp"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Library App"
        android:textAllCaps="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#171992"
        android:textAlignment="center"
        android:textSize="25dp"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Build it bigger"
        android:textAllCaps="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#080a67"
        android:textAlignment="center"
        android:textSize="25dp"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="XYZ Reader"
        android:textAllCaps="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textAlignment="center"
        android:textColor="#28254d"
        android:textSize="25dp"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="Capstone:My own App"
        android:textAllCaps="true"
        android:textColor="#cd0b16"
        android:layout_margin="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textAlignment="center"
        android:textSize="25dp" />


</LinearLayout>
